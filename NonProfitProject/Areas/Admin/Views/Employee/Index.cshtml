@model List<Employees>
@{
    ViewData["Title"] = "Employees List";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="container">
        <div class="card-header-pills"><h1 class="far fa-id-card"> Employees</h1></div>
        <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Employee" asp-action="AddEmployee">
            Add Employee
        </a>
    </div>
    <br />
    <div class="container" style="font-size:small;">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" hidden>#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Address1</th>
                    <th scope="col">Address2</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Zip Code</th>
                    <th scope="col">Country</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Employees empl in Model)
                {
                    <tr>
                        <th scope="row" hidden>@empl.EmpID</th>
                        <th>@empl.User.UserFirstName</th>
                        <th>@empl.User.UserLastName</th>
                        <th>@empl.User.Email</th>
                        <th>@empl.User.UserAddr1</th>
                        <th>@empl.User.UserAddr2</th>
                        <th>@empl.User.UserCity</th>
                        <th>@empl.User.UserState</th>
                        <th>@empl.User.UserPostalCode</th>
                        <th>@empl.User.UserCountry</th>
                        <th><button class="btn btn-dark" asp-area="Admin" asp-controller="Dashboard" asp-action="">Detail</button></th>
                    </tr>
                }
            </tbody>
        </table>
        <h5 class="text-primary">@TempData["EmployeeChanges"]?.ToString()</h5>
    </div>
</div>