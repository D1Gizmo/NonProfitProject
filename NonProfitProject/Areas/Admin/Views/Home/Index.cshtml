@Model
@{
    ViewData["Title"] = "Main Dashboard";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="card-header">
        <h1> Welcome Admin</h1>
    </div>
    <br />
    
    <!--ICONS TO LINK TO THE OTHER PART OF THE ADMINISTRATION DASHBOARDS-->
    <div class="row justify-content-md-center">
        <a class="card w-25 btn btn-outline-dark" style="margin: 0 1rem;" asp-area="" asp-controller="Home" asp-action="Index">
            <!--WEBSITE ICON AND LINK TO THE THE HOMEPAGE WEBSITE-->
            <h1 class="card-header fas fa-laptop-code"></h1>
            <div class="card-body">
                <h3 class="card-title">Websites</h3>
                <p class="card-text">View the homepage of the website</p>
            </div>
        </a>

        <a class="card w-25 btn btn-outline-dark" style="margin: 0 1rem;" asp-area="Admin" asp-controller="Event" asp-action="Index">
            <!--EVENTS ICON AND LINK TO THE TABLE OF THE CALENDAR EVENTS-->
            <h1 class="card-header far fa-calendar-alt"></h1>
            <div class="card-body">
                <h3 class="card-title">Events</h3>
                <p class="card-text">View the list of events on the calendar</p>
            </div>
        </a>

        <a class="card w-25 btn btn-outline-dark" style="margin: 0 1rem;" asp-area="Admin" asp-controller="Reports" asp-action="Index">
            <!--REPORTS ICON AND LINK TO THE SECTION TO CREATE REPORTS-->
            
            <h1 class="card-header far fa-flag"></h1>
            <div class="card-body">
                <h3 class="card-title">Reports</h3>
                <p class="card-text">Create and download reports</p>
            </div>
        </a>
    </div>
    <div class="row"><br /></div>
    <div class="row justify-content-md-center">
        <a class="card w-25 btn btn-outline-dark" style="margin: 0 1rem;" asp-area="Admin" asp-controller="User" asp-action="Index">
            <!--USERS ICON AND LINK TO THE LIST OF USERS (DONORS AND MEMBERS) TO DELETE, ADD, EDIT OR UPDATE-->

            <h1 class="card-header fas fa-user"></h1>
            <div class="card-body">
                <h3 class="card-title">Users</h3>
                <p class="card-text">Go to...</p>
            </div>
        </a>
        <a class="card w-25 btn btn-outline-dark" style="margin: 0 1rem;" asp-area="Admin" asp-controller="Employee" asp-action="Index">
            <!--EMPLOYEES ICON AND LINK TO THE LIST OF EMPLOYEES TO DELETE, ADD, EDIT OR UPDATE-->

            <h1 class="card-header fas fa-users"></h1>
            <div class="card-body">
                <h3 class="card-title">Employees</h3>
                <p class="card-text">Go to...</p>
            </div>
        </a>
        <a class="card w-25 btn btn-outline-dark" style="margin: 0 1rem;" asp-area="Admin" asp-controller="Committee" asp-action="Index">
            <!--BOARD COMMITTEES ICON AND LINK TO THE LIST OF COMMITTEES TO DELETE, ADD, EDIT OR UPDATE-->

            <h1 class="card-header fas fa-users"></h1>
            <div class="card-body">
                <h3 class="card-title">Board Committees</h3>
                <p class="card-text">Go to...</p>
            </div>
        </a>

    </div>
    <div class="row"><br /></div>
    <div class="row justify-content-md-center">
        <a class="card w-25 btn btn-outline-dark" style="margin: 0 1rem;" asp-area="Admin" asp-controller="Dashboard" asp-action="Dashboard3">
            <!--EDIT WEB PAGES ICON AND LINK TO BE ABLE TO EDIT THE WEB PAGES AND ADD INFORMATION TO THE WEB-->
            <h1 class="card-header fas fa-edit"></h1>
            <div class="card-body">
                <h3 class="card-title">Edit Web Pages</h3>
                <p class="card-text">Go to...</p>
            </div>
        </a>
        <a class="card w-25 btn btn-outline-dark" style="margin: 0 1rem;" asp-area="Admin" asp-controller="Home" asp-action="Index">
            <!--HELP DESK ICON AND LINK TO HELP SECTION WITH HELP DOCUMENTS AND CONTACT LINK TO EMAIL THE HELP-->
            <h1 class="card-header fas fa-info-circle"></h1>
            <div class="card-body">
                <h3 class="card-title">Help Desk</h3>
                <p class="card-text">Go to...</p>
            </div>
        </a>
    </div>
</div>