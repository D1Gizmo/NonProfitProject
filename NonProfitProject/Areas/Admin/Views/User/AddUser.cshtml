@model User
@{
    ViewData["Title"] = "Add User";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="card-header-pills"><h1 class="fas fa-user-edit">  @ViewData["Title"]</h1></div>
    <div>
        <form method="post" style="font-size:medium">
            <div class="row justify-content-center">
                <div class="card w-auto" style="margin:0.5rem;">
                    <h4 class="card-header">Personal Information</h4>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-auto"><label>First Name: </label></div>
                                <div class="col-auto">
                                    <input class="form-control" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-auto"><label>Last Name: </label></div>
                                <div class="col-auto">
                                    <input class="form-control" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-auto"><label>Birth Date: </label></div>
                                <div class="col-auto">
                                    <input class="form-control" type="date" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-auto"><label for="gender">Gender: </label></div>
                                <div class="col-auto">
                                    <select class="form-control" name="gender" id="gender" >
                                        <option value="#" disabled selected>...</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Prefer Not to Say">Prefer Not to Say</option>
                                    </select>
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="card w-auto" style="margin:0.5rem;">
                    <h4 class="card-header">Address Information</h4>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group w-50">
                                <div class="col-auto"><label>Address 1: </label></div>
                                <div class="col-12">
                                    <input class="form-control" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group w-50">
                                <div class="col-auto"><label>Address 2: </label></div>
                                <div class="col-12">
                                    <input class="form-control" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-auto"><label>City: </label></div>
                                <div class="col-auto">
                                    <input class="form-control" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-auto"><label>State: </label></div>
                                <div class="col-auto">
                                    <input class="form-control" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-auto"><label>Postal Code: </label></div>
                                <div class="col-auto">
                                    <input class="form-control" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-auto"><label>Country: </label></div>
                                <div class="col-auto">
                                    <input class="form-control" data-val="false" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</form>
    </div>
</div>