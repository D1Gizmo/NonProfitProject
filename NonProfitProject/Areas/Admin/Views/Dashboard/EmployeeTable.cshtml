
@model List<Employees>
@{
    ViewData["Title"] = "Employees List";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="card-header-pills"><h1 class="fas fa-users"> Users</h1></div>
    <div class="row nav justify-content-lg-center text-center">
        <div class="nav-item">
            <a class="nav-link col-2 fas fa-arrow-alt-circle-left text-dark" asp-area="Admin" asp-controller="Dashboard" asp-action="UserTable"></a>
        </div>
        <div class="col-6"><h3>Employees</h3></div>
        <div class="nav-item">
            <a class="nav-link col-2 fas fa-arrow-alt-circle-right text-dark" asp-area="Admin" asp-controller="Dashboard" asp-action="CommitteeTable"></a>
        </div>
        
    </div>

        <br />
        <div class="row justify-content-lg-center text-center">
            <button class="btn btn-outline-dark">
                Add Employee
            </button>
        </div>
        <br />


        <div class="container" style="font-size:small;">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Address1</th>
                        <th scope="col">Address2</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Zip Code</th>
                        <th scope="col">Country</th>
                        <th scope="col">Telephone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Employees empl in Model)
                    {
                        <tr>
                            <th scope="row">@empl.EmpID</th>
                            <th>@empl.User.UserFirstName</th>
                            <th>@empl.User.UserLastName</th>
                            <th>@empl.User.Email</th>
                            <th>@empl.User.UserAddr1</th>
                            <th>@empl.User.UserAddr2</th>
                            <th>@empl.User.UserCity</th>
                            <th>@empl.User.UserState</th>
                            <th>@empl.User.UserPostalCode</th>
                            <th>@empl.User.UserCountry</th>
                            <th>@empl.User.PhoneNumber</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>