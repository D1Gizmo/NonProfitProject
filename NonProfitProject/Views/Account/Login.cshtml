@model NonProfitProject.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["Title2"] = "Non-Paw-Fit Animal Rescue";
    Layout = "_HomePage";
}


<div class="container">
    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="LogIn" asp-route-returnUrl=" ">
            <div class="row">
                <div class="offset-sm-2 col-sm-4">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"><label>Email or Username: </label></div>
                <div class="col-sm-4">
                    <input asp-for="Username" class="form-control" />
                </div>

            </div>
            <div class="row">
                <div class="offset-sm-2 col-sm-4">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"><label>Password: </label></div>
                <div class="col-sm-4">
                    <input id="password" asp-for="Password" class="form-control" />
                </div>
                <div>
                    <input type="checkbox" name="ShowPassword" onchange="document.getElementById('password').type = this.checked ? 'text' : 'password'">
                    <label for="ShowPassword"> Show Password</label>
                </div>
            </div>

            <div class="form-group row">

                <div class="offset-sm-2 col-sm-4">
                    <input type="checkbox" title="Remember Me" asp-for="RememberMe" />  <label>Remember Me</label>
                </div>
            </div>
            <div class="row">
                <div class="offset-2 col-sm-4">
                    <button type="submit" class="btn btn-primary">Log In</button>
                </div>

            </div>
            <div class="form-group row">
                <div class="offset-2 col-sm-4">
                    <p>Not registered?
                        <a asp-action="Register">Register as a new user</a></p>
                    
                </div>
            </div>
        </form>
    </div>
</div>