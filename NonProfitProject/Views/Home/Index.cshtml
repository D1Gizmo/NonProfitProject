@{
    ViewData["Title"] = "Home";
    ViewData["Title2"] = "Non-Paw-Fit Animal Rescue";
    Layout = "_HomePage";
}

<style>
    .jumbo-image {
        max-height: 35rem;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position:sticky;
    }
</style>
<!--JUMBOTRON THAT WELCOMES USERS TO THE LANDING THE PAGE OF THE WEBSITE-->
<div class="jumbotron bg-light text-center" style="margin-top:2.5rem;" id="Welcome">
    <h1 class="display-2 text-center">Welcome!</h1>
    <div class="row justify-content-center">
        <!--PICTURE CAROUSEL OF ALL THE PETS DISPLAYED IN A SLIDESHOW-->
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active"> <img class="w-auto jumbo-image" src="~/img/AnimalPics/Slideshow/DoggiePic.jpg" alt="First slide"></div>
                <div class="carousel-item"><img class="w-auto jumbo-image" src="~/img/AnimalPics/Slideshow/BWCatPic.jpg" alt="Second slide"> </div>
                <div class="carousel-item"> <img class="w-auto jumbo-image" src="~/img/AnimalPics/Slideshow/BunnyPic.jpg" alt="Third slide"></div>
                <div class="carousel-item"> <img class="w-auto jumbo-image" src="~/img/AnimalPics/Slideshow/BunnyPic.jpg" alt="Fourth slide"></div>
                <div class="carousel-item"> <img class="w-auto jumbo-image" src="~/img/AnimalPics/Slideshow/DogPic2.jpg" alt="Fifth slide"></div>
                <div class="carousel-item"> <img class="w-auto jumbo-image" src="~/img/AnimalPics/Slideshow/CatPic3.jpg" alt="Sixth slide"></div>
                <div class="carousel-item"> <img class="w-auto jumbo-image" src="~/img/AnimalPics/Slideshow/DogPic3.jpg" alt="Seventh slide"></div>
                <div class="carousel-item"> <img class="w-auto jumbo-image" src="~/img/AnimalPics/Slideshow/HorsePic.jpg" alt="Eigth slide"></div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="container">

        <br /><br />
    </div>
    <div class="container container-fluid">
        <h4>@ViewData["Title2"] is dedicated to bringing change to the world. One rescue at a time.</h4>
        <h4>And you can help us make that change! Join us today, and help bring change to an animal who needs it. </h4>
        <h4>An animal who deserves it. Be the change you want to see.</h4>
    </div>
</div>


<!--SECTIONS FOR EACH PART OF THE WEBSITE-->
<div class="container" style="margin-top:5rem;">
    <div class="row">
        <div class="col" style="margin:0 0.1rem;">
            <h2 class="card-header bg-dark text-light" style="text-align:left;">
                About Us
            </h2>
            <div class="card-body" style="height: 175px;">
                <p>ABC Animal Rescue is a charity that, you guessed it, helps to rescue animals! With your support, we can rescue and relocate animals whos lives have been disrupted.</p>
            </div>
            <div class="card-footer bg-white">
                <p><a class="card-link text-dark" style="text-align:center;" asp-area="" asp-controller="Home" asp-action="AboutUs">Learn More</a></p>
            </div>
        </div>

        <div class="col" style="margin:0 0.1rem;">
            <h2 class="card-header bg-dark text-light" style="text-align:left;">
                Calendar Events
            </h2>
            <div class="card-body" style="height: 175px;">
                <p>We also hold many events to raise awareness and money to put towards the cause! Every penny counts towards helping our animal friends. </p>
            </div>
            <div class="card-footer bg-white">
                <a class="card-link text-dark" style="text-align:center; margin-top:30px; margin-bottom:30px;" asp-area="" asp-controller="EventCalendar" asp-action="Index">See More</a>
            </div>
        </div>

        <div class="col" style="margin:0 0.1rem;">
            <h2 class="card-header bg-dark text-light">
                News
            </h2>
            <div class="card-body" style="height: 175px;">
                <p>Care to see updates from Animal Rescue? Well now you can check out the latest updates below!</p>
            </div>
            <div class="card-footer bg-white">
                <p> <a class="card-link text-dark" style="text-align:center; margin-top:30px; margin-bottom:30px;" asp-area="" asp-controller="News" asp-action="Index">Click Here</a></p>
            </div>
        </div>

        <div class="col" style="margin:0 0.1rem;">
            <h2 class="card-header bg-dark text-light">
                Donate
            </h2>
            <div class="card-body" style="height: 175px;">
                <p>All donations go towards rescuing distressed animals. Every penny counts, and every penny is used.</p>
            </div>
            <div class="card-footer bg-white">
                <p> <a class="card-link text-dark" style="text-align:center;" asp-area="User" asp-controller="Donate" asp-action="Index">Donate Here</a></p>
            </div>
        </div>
    </div>
</div>
<div class="parallax3 bg-dark" style="margin-top:5rem;"></div>
<div class="container-fluid bg-dark text-light">
    <div class="text-center">
        <h1 class="display-1 text-center">Thank You!</h1>
        <h4>Thank you for taking the time to raise your awareness, </h4>
        <h4>and considering a donation to Non-Paw-fit Animal Rescue!</h4>
    </div>
    <br />
</div>
<div class="container-fluid bg-light" style="padding:10rem;">
    <div class="row justify-content-md-center text-center">
        <div class="col-auto" style="margin:1rem;">
            <div class="card" style="padding:3rem;">
                <div class="card-body bg-white">
                    <h1>Join Us Today!</h1>
                    <br />
                    <h1> <a class="btn btn-primary" style="font-size:2rem;" asp-area="" asp-controller="Account" asp-action="Register">Register</a></h1>
                </div>
            </div>
        </div>
    </div>
</div>




